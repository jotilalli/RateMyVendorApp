<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ratemyvendorapp.submitReview">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/post_a_review"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:fontFamily="casual"
        android:textColor="@color/colorAccent" />


    <TextView
        android:id="@+id/presentationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="100dp"
        android:fontFamily="casual"
        android:text="@string/presentation"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_marginStart="20dp"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/serviceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="150dp"
        android:fontFamily="casual"
        android:text="@string/service"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_marginStart="20dp"
        tools:ignore="RelativeOverlap" />

    <RatingBar
        android:id="@+id/presentationRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="100dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="80dp" />

    <RatingBar
        android:id="@+id/serviceRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="150dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="80dp" />

    <TextView
        android:id="@+id/priceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="200dp"
        android:fontFamily="casual"
        android:text="@string/price"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_marginStart="20dp"
        tools:ignore="RelativeOverlap" />

    <RatingBar
        android:id="@+id/priceRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="200dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="80dp" />

    <TextView
        android:id="@+id/professionalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="250dp"
        android:fontFamily="casual"
        android:text="@string/professionalism"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_marginStart="20dp"
        tools:ignore="RelativeOverlap" />

    <RatingBar
        android:id="@+id/professionalRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="250dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="80dp" />

    <TextView
        android:id="@+id/OverallTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="300dp"
        android:fontFamily="casual"
        android:text="@string/overall"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_marginStart="20dp"
        tools:ignore="RelativeOverlap" />

    <RatingBar
        android:id="@+id/overallRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="300dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="80dp" />


    <TextView
        android:id="@+id/addCommentsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="400dp"
        android:fontFamily="casual"
        android:text="@string/additional_comments"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:textColor="@color/colorAccent"
        android:layout_marginStart="20dp"
        tools:ignore="RelativeOverlap" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="20"
        android:layout_below="@+id/addCommentsTitle"
        android:layout_alignStart="@+id/addCommentsTitle"
        android:layout_marginTop="15dp"
        android:id="@+id/commentBox"
        android:hint="@string/add_comment"
        android:backgroundTint="?android:attr/colorButtonNormal"
        android:textColor="?attr/colorAccent" />

    <Button
        android:text="@string/submitBtn"
        android:id="@+id/submitReviewBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="630dp"
        android:fontFamily="casual"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="?android:attr/colorAccent"
        tools:targetApi="lollipop" />

</RelativeLayout>
