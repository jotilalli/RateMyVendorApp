<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.ratemyvendorapp.submitReview"
        android:orientation="vertical">

        <TextView
            android:id="@+id/postReviewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="@string/post_a_review"
            android:textColor="@color/colorAccent"
            android:textSize="30sp"
            android:textStyle="normal|bold" />


        <TextView
            android:id="@+id/presentationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="casual"
            android:text="@string/presentation"
            android:textAlignment="textStart"
            android:textSize="25sp"
            android:textStyle="normal|bold"
            android:layout_marginTop="30dp" />

        <RatingBar
            android:id="@+id/presentationRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="57dp"
            style="@style/Widget.AppCompat.RatingBar"
            android:layout_marginTop="-18dp"
            android:layout_gravity="end" />

        <TextView
            android:id="@+id/serviceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="casual"
            android:text="@string/service"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="normal|bold"
            tools:ignore="RelativeOverlap" />


        <RatingBar
            android:id="@+id/serviceRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="57dp"
            style="@style/Widget.AppCompat.RatingBar"
            android:layout_marginTop="-18dp"
            android:layout_gravity="end" />

        <TextView
            android:id="@+id/priceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="casual"
            android:text="@string/price"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="normal|bold"
            tools:ignore="RelativeOverlap" />

        <RatingBar
            android:id="@+id/priceRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="57dp"
            style="@style/Widget.AppCompat.RatingBar"
            android:layout_marginTop="-18dp"
            android:layout_gravity="end" />

        <TextView
            android:id="@+id/professionalTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="casual"
            android:text="@string/professionalism"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="normal|bold"
            tools:ignore="RelativeOverlap" />

        <RatingBar
            android:id="@+id/professionalRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="57dp"
            style="@style/Widget.AppCompat.RatingBar"
            android:layout_marginTop="-15dp"
            android:layout_gravity="end" />

        <TextView
            android:id="@+id/OverallTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="casual"
            android:text="@string/overall"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="normal|bold"
            tools:ignore="RelativeOverlap" />

        <RatingBar
            android:id="@+id/overallRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="57dp"
            style="@style/Widget.AppCompat.RatingBar"
            android:layout_marginTop="-15dp"
            android:layout_gravity="end" />


        <TextView
            android:id="@+id/addCommentsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="casual"
            android:text="@string/additional_comments"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            tools:ignore="RelativeOverlap"
            android:layout_marginTop="30dp" />

        <EditText
            android:id="@+id/commentBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="20"
            android:hint="@string/add_comment"
            android:inputType="textMultiLine"
            android:textColor="?attr/colorAccent"
            android:textSize="24sp" />

        <Button
            android:id="@+id/submitReviewBtn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="@string/submitBtn"
            android:textColor="?android:attr/colorAccent"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            tools:targetApi="lollipop"
            android:onClick="BasicToast2"/>

    </LinearLayout>
</ScrollView>